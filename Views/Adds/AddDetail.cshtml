@model FarmTracker_web.Models.Adds.Adds
@{
    ViewData["Title"] = "AddDetail";
}


<div class="row">
    <div class="col-12">
        <h1>@Model.Name</h1>
    </div>
    <div class="col-md-6">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Pictures.Count(); i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/Content/farmTracker/img/@Model.Pictures.ToList()[i].Address">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Content/farmTracker/img/@Model.Pictures.ToList()[i].Address">
                        </div>
                    }
                }
                @if (Model.Pictures.Count() == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Content/farmTracker/img/null-content.png">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="category-properties">
            <label class="clr-primary"><b>$@String.Format("{0:0.##}", Model.Price)</b></label>
            <input type="hidden" id="hiddenCUID" value="@Model.Cuid"/>
            <input type="hidden" id="hiddenAUID" value="@Model.Auid"/>
            <div id="categoryProperties">
                <div class="out-of-middle"><div class="middle"><div style="text-align:center"><div class="lds-ripple"><div></div><div></div></div></div></div></div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div id="addOwner" class="add-owner">
            <label><b>@Model.CreatedByUu.Name @Model.CreatedByUu.Surname</b></label> <br>
            <label><b>Phone:</b> +90 @Model.CreatedByUu.PhoneNumber</label>
        </div>
    </div>
    <div class="col-12 mt-3">
        <h3>Description</h3>
        <p>@Model.Description</p>
    </div>
</div>


@section Scripts{
    <script src="~/Content/farmTracker/js/adds.js"></script>
}