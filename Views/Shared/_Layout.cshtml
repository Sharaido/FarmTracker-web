<!DOCTYPE HTML>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/farmTracker/img/system/f-logo.png" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/Content/assets/mayer-reset/css/reset.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/fontawesome-free-5.9.0/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/bootstrap-4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/dk-style2019/css/dk-style.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/cssload/lds_ripple.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/dk-nav/css/dk-nav.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/dk-header/css/dk-header.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/dk-popup/assets/animate/animate.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/dk-popup/css/dk-popup.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/kardo.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/farmTracker/css/farmTracker.css" />
    @RenderSection("Head", required: false)
</head>
<body class="">
    <header class="dk-header">
        <div id="dk-navbtn" class="dh-nav-btn">
            <i class="fa fa-bars"></i>
        </div>
        <div class="dh-logo">
            <a href="/">
                <img src="~/Content/farmTracker/img/system/logo.png" alt="Kardo" />
            </a>
        </div>
        <div class="dh-user" id="dhUser">
            <div class="out-of-middle"><div class="middle"><div style="text-align:center"><div class="lds-ripple"><div></div><div></div></div></div></div></div>
        </div>
        <div class="dh-shortcuts">
            @if (User.Identity.IsAuthenticated && User.FindFirst(claim => claim.Type == "MemberType")?.Value != "1")
            {
                <div class="dh-sc">
                    <a href="javascript:;" data-dropdown="dk-notification-box">
                        <i class="fa fa-bell"></i>
                        <div class="sc-num" id="notificationsCount">0</div>
                    </a>
                    <div id="dk-notification-box" class="dk-notification-box hidden-xs">
                        <div class="notifications-links">
                            <div class="dk-notification-box-h"><img src="~/Content/farmTracker/img/system/logo.png" alt="" /></div>
                            <div id="notificationsContainer">
                            </div>
                        </div>
                        <a href="#" class="all-noti">Show All</a>
                    </div>
                </div>
                <div class="dh-sc">
                    <a href="#" data-dropdown="dk-apps-box">
                        <i class="fa fa-ellipsis-v"></i>
                    </a>
                    <div id="dk-apps-box" class="dk-apps-box hidden-xs">
                        <div class="aplications">
                            <div class="aplications-links">
                                <a href="colors.html"><img src="~/Content/img/systemPics/kardo-icon.png" alt="" /><span class="text">Colors</span></a>
                                <a href="#"><img src="~/Content/img/systemPics/kardo-icon.png" alt="" /><span class="text">Kardo</span></a>
                                <a href="#"><img src="~/Content/img/systemPics/kardo-icon.png" alt="" /><span class="text">Kardo</span></a>
                                <a href="#"><img src="~/Content/img/systemPics/kardo-icon.png" alt="" /><span class="text">Kardo</span></a>
                                <a href="#"><img src="~/Content/img/systemPics/kardo-icon.png" alt="" /><span class="text">Kardo</span></a>
                                <a href="#"><img src="~/Content/img/systemPics/kardo-icon.png" alt="" /><span class="text">Kardo</span></a>
                                <a href="#"><img src="~/Content/img/systemPics/kardo-icon.png" alt="" /><span class="text">Kardo</span></a>
                                <a href="#"><img src="~/Content/img/systemPics/kardo-icon.png" alt="" /><span class="text">Kardo</span></a>
                                <a href="#"><img src="~/Content/img/systemPics/kardo-icon.png" alt="" /><span class="text">Kardo</span></a>
                            </div>
                        </div>
                        <a href="#" class="all-app">Daha Fazlası</a>
                    </div>
                </div>
            }
        </div>
        <nav class="dh-h-nav">
            <ul>
                <li><a href="/">Homepage</a></li>
                    @if (User.Identity.IsAuthenticated && User.FindFirst(claim => claim.Type == "MemberType")?.Value != "1")
                    {
                        <li><a href="/Adds/PostAdd">Post Free Add</a></li>
                    }
                </ul>
        </nav>
    </header>
    <partial name="Partials/Layout_SideNav" />
    <section id="container" class="container col-12">
        @RenderBody()
    </section>


    <script type="text/javascript" src="~/Content/assets/jquery/jquery-3.4.1.min.js"></script>
    <partial name="Partials/_ValidationScriptsPartial" />
    <script type="text/javascript" src="~/Content/assets/bootstrap-4.3.1/js/popper.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/bootstrap-4.3.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/dk-nav/js/dk-nav.js"></script>
    <script type="text/javascript">
        dkNavigator({
            id: "dk-nav",
            navbtnId: "dk-navbtn",
            navTop: 55,
            articleId: "container",
            type: "advanced",
            //theme: "dark-theme",
            zIndex: 1000 //header's zIndex -1
        });
    </script>
    <script src="~/Content/assets/dk-header/js/dk-header.js"></script>
    <script src="~/Content/assets/dk-popup/js/dk-popup.js"></script>
    <script src="~/Content/js/main.js"></script>
    <script src="~/Content/farmTracker/js/farmTracker.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>