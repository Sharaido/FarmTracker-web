@model FarmTracker_web.Models.DB.Farms
@{
    ViewData["Title"] = "Index";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="pills-all-tab" data-toggle="pill" href="#pills-all" role="tab" aria-controls="pills-all" aria-selected="true">All</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-animal-tab" data-toggle="pill" href="#pills-animal" role="tab" aria-controls="pills-animal" aria-selected="true">Animal Properties</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-plant-tab" data-toggle="pill" href="#pills-plant" role="tab" aria-controls="pills-plant" aria-selected="true">Plant Properties</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="collaborators-tab" data-toggle="pill" href="#pills-collaborators" role="tab" aria-controls="pills-collaborators" aria-selected="false">Collaborators</a>
    </li>
</ul>
<hr>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-all" role="tabpanel" aria-labelledby="pills-all-tab">
        <div class="row">
            <div class="col-10">
                <div class="form-group">
                    <input type="text" class="form-control" id="" placeholder="Search Property">
                </div>
            </div>
            <div class="col-2" style="text-align: right;">
                <button type="button" class="btn btn-success" onclick="dkPopup({
                            type: 'iframe',
                            iframeSrc: 'form.html',
                            title: 'Iframe Popup'
                        })">
                    New Property
                </button>
            </div>
        </div>
        <div id="allProperties">
            <div class="out-of-middle"><div class="middle"><div style="text-align:center"><div class="lds-ripple"><div></div><div></div></div></div></div></div>
        </div>
    </div>
    <div class="tab-pane fade" id="pills-animal" role="tabpanel" aria-labelledby="pills-animal-tab">
        <div class="row">
            <div class="col-10">
                <div class="form-group">
                    <input type="text" class="form-control" id="" placeholder="Search Ranch">
                </div>
            </div>
            <div class="col-2" style="text-align: right;">
                <button type="button" class="btn btn-success" onclick="dkPopup({
                            type: 'iframe',
                            iframeSrc: 'form.html',
                            title: 'Iframe Popup'
                        })">
                    New Ranch
                </button>
            </div>
        </div>
        <div id="animalProperties">
            <div class="out-of-middle"><div class="middle"><div style="text-align:center"><div class="lds-ripple"><div></div><div></div></div></div></div></div>
        </div>
    </div>
    <div class="tab-pane fade" id="pills-plant" role="tabpanel" aria-labelledby="pills-plant-tab">
        <div class="row">
            <div class="col-10">
                <div class="form-group">
                    <input type="text" class="form-control" id="" placeholder="Search Ranch">
                </div>
            </div>
            <div class="col-2" style="text-align: right;">
                <button type="button" class="btn btn-success" onclick="dkPopup({
                            type: 'iframe',
                            iframeSrc: 'form.html',
                            title: 'Iframe Popup'
                        })">
                    New Ranch
                </button>
            </div>
        </div>
        <div id="plantProperties">
            <div class="out-of-middle"><div class="middle"><div style="text-align:center"><div class="lds-ripple"><div></div><div></div></div></div></div></div>
        </div>
    </div>
    <div class="tab-pane fade" id="pills-collaborators" role="tabpanel" aria-labelledby="pills-collaborators-tab">

        <div class="row">
            <div class="col-8">
                <div class="form-group">
                    <input type="text" class="form-control" id="" placeholder="Search Collaborators">
                </div>
            </div>
            <div class="col-4" style="text-align: right;">
                <button type="button" class="btn btn-success">New Collaborators</button>
            </div>
        </div>
        <div class="list-group">
            <button type="button" class="list-group-item list-group-item-action d-flex align-items-center"><span class="badge badge-info badge-pill">14</span> Dapibus ac facilisis in</button>
            <button type="button" class="list-group-item list-group-item-action d-flex align-items-center"><span class="badge badge-info badge-pill">14</span> Dapibus ac facilisis in</button>
            <button type="button" class="list-group-item list-group-item-action d-flex align-items-center"><span class="badge badge-info badge-pill">14</span> Dapibus ac facilisis in</button>
            <button type="button" class="list-group-item list-group-item-action d-flex align-items-center"><span class="badge badge-info badge-pill">14</span> Dapibus ac facilisis in</button>
            <button type="button" class="list-group-item list-group-item-action d-flex align-items-center"><span class="badge badge-info badge-pill">14</span> Dapibus ac facilisis in</button>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Content/farmTracker/js/farms.js"></script>
}