@model FarmTracker_web.Models.Farms.Farms
@{
    ViewData["Title"] = "Index";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="pills-all-tab" data-toggle="pill" href="#pills-all" role="tab" aria-controls="pills-all" aria-selected="true">Properties</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-details-tab" data-toggle="pill" href="#pills-details" role="tab" aria-controls="pills-details" aria-selected="false">Details</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-incomeAndExpenses-tab" data-toggle="pill" href="#pills-incomeAndExpenses" role="tab" aria-controls="pills-incomeAndExpenses" aria-selected="false">Income And Expenses</a>
    </li>
</ul>
<hr>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-all" role="tabpanel" aria-labelledby="pills-all-tab">
        <div class="farm-container">
            <button type="button" class="btn-plus express-menu-btn" data-menu-id="farmExpressMenu"><i class="fa fa-plus" data-menu-id="farmExpressMenu"></i></button>
            <div class="express-menu" id="farmExpressMenu">
                <a href="javascript:deleteFarmPopup('@Model.Name');" class="express-menu-item">Delete Farm</a>
                <a href="javascript:addFarmPropertyPopup();" class="express-menu-item">New Property</a>
            </div>

            <div class="property-container-overlay">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Search Properties" aria-label="Search Properties" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button"><i class="fa fa-search"></i></button>
                    </div>
                </div>
                <div class="property-container" id="allProperties">
                    <div class="out-of-middle"><div class="middle"><div style="text-align:center"><div class="lds-ripple"><div></div><div></div></div></div></div></div>
                </div>
            </div>
            <div class="extras-container">
                <h2>Collaborators</h2>
                <div class="collaborator-container" id="farmCollaborators">
                    <div class="out-of-middle"><div class="middle"><div style="text-align:center"><div class="lds-ripple"><div></div><div></div></div></div></div></div>
                </div>
                <h2>Last Income and Expenses</h2>
                <div class="ioe-container" id="lastIoeContainer">
                    <div class="out-of-middle"><div class="middle"><div style="text-align:center"><div class="lds-ripple"><div></div><div></div></div></div></div></div>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="pills-details" role="tabpanel" aria-labelledby="pills-details-tab">
        <button type="button" class="btn-plus express-menu-btn" data-menu-id="farmDetailsExpressMenu"><i class="fa fa-plus" data-menu-id="farmDetailsExpressMenu"></i></button>
        <div class="express-menu" id="farmDetailsExpressMenu">
            <a href="javascript:addFarmEntityPopup();" class="express-menu-item">Add Product</a>
            <a href="javascript:addCollaboratorPopup();" class="express-menu-item">Add Collaborator</a>
        </div>
        <div class="row">
            <div class="col-6">
                <h1><i class="fa fa-tools"></i> Products</h1>
                <div class="product-container" id="productsContainer">
                    <div class="out-of-middle"><div class="middle"><div style="text-align:center"><div class="lds-ripple"><div></div><div></div></div></div></div></div>
                </div>
            </div>
            <div class="col-6">
                <h1><i class="fa fa-user"></i> Collaborators</h1>
                <div class="collaborator-container" id="collaboratorsContainer">
                    <div class="out-of-middle"><div class="middle"><div style="text-align:center"><div class="lds-ripple"><div></div><div></div></div></div></div></div>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="pills-incomeAndExpenses" role="tabpanel" aria-labelledby="pills-incomeAndExpenses-tab">
        <button type="button" class="btn-plus express-menu-btn" data-menu-id="IoeExpressMenu"><i class="fa fa-plus" data-menu-id="IoeExpressMenu"></i></button>
        <div class="express-menu" id="IoeExpressMenu">
            <a href="javascript:addIncomeOrExpensePopup(true);" class="express-menu-item">Add Income</a>
            <a href="javascript:addIncomeOrExpensePopup(false);" class="express-menu-item">Add Expense</a>
        </div>
        <div class="row">
            <div class="col-6">
                <h1>Incomes</h1>
                <div class="ioe-container" id="incomesContainer">
                    <div class="out-of-middle"><div class="middle"><div style="text-align:center"><div class="lds-ripple"><div></div><div></div></div></div></div></div>
                </div>
            </div>
            <div class="col-6">
                <h1>Expenses</h1>
                <div class="ioe-container" id="expensesContainer">
                    <div class="out-of-middle"><div class="middle"><div style="text-align:center"><div class="lds-ripple"><div></div><div></div></div></div></div></div>
                </div>
            </div>
        </div>

    </div>
    <input type="hidden" value="@Model.Fuid" id="hiddenFUID" />
</div>

@section Scripts{
    <script src="~/Content/farmTracker/js/farms.js"></script>
}