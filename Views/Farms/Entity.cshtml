@model FarmTracker_web.Models.Farms.EntityOfFp
@{
    ViewData["Title"] = "Entity";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Farms/@ViewData["CurrentFarmUID"]">@ViewData["CurrentFarmName"]</a></li>
        <li class="breadcrumb-item"><a href="/Farms/@ViewData["CurrentFarmUID"]/@Model.Puid">@ViewData["CurrentPropertyName"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>
<div class="form-group">
    <button class="btn btn-primary">Update</button>
    <button class="btn btn-info" onclick="addEntityDetailPopup()"><i class="fa fa-plus"></i> Detail</button>
    <button class="btn btn-success"  onclick="addRemainderPopup()"><i class="fa fa-plus"></i> Remainder</button>
    <button type="button" class="btn btn-danger" onclick="deleteFPEntityPopup('@Model.Name')">Delete Entity</button>
</div>
<hr>
<div class="row">
    <div class="col-sm-6">
        <h1>Entity Informations</h1>
        <input type="hidden" id="hiddenCUID" value="@Model.Cuid">
        <input type="hidden" id="hiddenEUID" value="@Model.Euid">
        @if (Model.Id != null)
        {
            <div class="form-gruop">
                <label for="">ID</label>
                <input type="text" class="form-control disabled" disabled value="@Model.Id">
            </div>
        }
        <div class="form-gruop">
            <label for="">Name</label>
            <input type="text" class="form-control disabled" disabled value="@Model.Name">
        </div>
        @if (Model.Description != null)
        {

            <div class="form-gruop">
                <label for="">Description</label>
                <textarea class="form-control disabled" disabled rows="3">@Model.Description</textarea>
            </div>
        }
        @if (Model.Count > 1)
        {
            <div class="form-group">
                <label for="">Count</label>
                <input type="number" class="form-control disabled" disabled min="1" value="@Model.Count">
            </div>
        }
        @if (Model.PurchasedDate != null)
        {
            <div class="form-group">
                <label for="">Purchased Date</label>
                <input type="text" class="form-control disabled" disabled value="@(((DateTime)Model.PurchasedDate).ToString("yyyy-MM-dd"))">
            </div>
        }
        @if (Model.Cost != 0)
        {
            <div class="form-group">
                <label for="">Cost</label>
                <input type="number" class="form-control disabled" disabled min="0" value="@Model.Cost">
            </div>
        }
        <div id="categoryProperties"></div>
    </div>
    <div class="col-sm-6">
        <h1 data-toggle="tooltip" data-placement="top" title="Tooltip on top">Entity Details</h1>
        <div id="entityDetails">
            <div class="out-of-middle"><div class="middle"><div style="text-align:center"><div class="lds-ripple"><div></div><div></div></div></div></div></div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Content/farmTracker/js/farms.js"></script>
}